<?xml version="1.0" encoding="UTF-8"?>

<!--        FILE appender는 날짜 기반 로그 파일 롤링과 30일 보존을 설정합니다.
        ASYNC_FILE appender는 비동기적으로 로그를 처리하여 성능을 개선합니다.
        CONSOLE appender는 콘솔에 로그를 출력합니다-->

<configuration>
    <!-- Console Appender 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender 설정 -->
    <!-- 일별로 로그 파일을 생성하고, 최대 30일 동안 보존하도록 설정 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/today.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 로그 파일의 이름 패턴 (년-월-일 형식) -->
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 보존할 최대 기간 (30일) -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Async Appender 설정 -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
    </appender>

    <!-- 루트 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="ASYNC_FILE" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>